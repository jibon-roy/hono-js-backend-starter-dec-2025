# ------------------------------------------------------------
# Core
# ------------------------------------------------------------

# App environment
NODE_ENV=development
PORT=5000

# Used in logs (optional)
SERVICE_NAME=hono-js-starter

# Frontend URL used for CORS allow-list in production.
# Note: trailing slash is OK (the server normalizes it).
FRONTEND_URL=http://localhost:5173/

# Optional URLs used by the app (links, assets, etc.)
BACKEND_URL=http://localhost:5000
BACKEND_IMAGE_URL=http://localhost:5000/uploads
RESET_PASS_LINK=http://localhost:5173/reset-password

# HTTP middleware tuning
# MAX_BODY_SIZE is in bytes. Example: 1048576 = 1MB
MAX_BODY_SIZE=1048576
# REQUEST_TIMEOUT_MS is in milliseconds. Example: 30000 = 30s
REQUEST_TIMEOUT_MS=30000

# Prisma
PRISMA_CLIENT_ENGINE_TYPE=binary

# ------------------------------------------------------------
# Database (Prisma + MongoDB)
# ------------------------------------------------------------

# This project uses Prisma with MongoDB (see prisma/schema/schema.prisma)
DATABASE_URL="mongodb+srv://USER:PASSWORD@cluster0.example.mongodb.net/hono_db?retryWrites=true&w=majority"

# ------------------------------------------------------------
# Redis (required for BullMQ queues)
# ------------------------------------------------------------

# BullMQ queues (email/otp workers + Bull Board) require Redis.
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ------------------------------------------------------------
# API Security Headers
# ------------------------------------------------------------

# Protected routes require these headers:
# - X-API-Key must match API_KEY
# - X-API-Access-Token must match API_ACCESS_TOKEN
#   If API_ACCESS_TOKEN is empty, the server falls back to API_KEY.
API_KEY=change-me
API_ACCESS_TOKEN=

# ------------------------------------------------------------
# JWT (only needed if you use JWT auth flows)
# ------------------------------------------------------------

JWT_SECRET=change-me
EXPIRES_IN=10d
REFRESH_TOKEN_SECRET=change-me
REFRESH_TOKEN_EXPIRES_IN=7d
RESET_PASS_TOKEN=change-me
RESET_PASS_TOKEN_EXPIRES_IN=1h

# ------------------------------------------------------------
# Email (optional)
# ------------------------------------------------------------

# Nodemailer SMTP/App password style
EMAIL=
APP_PASS=

# SendGrid
SENDGRID_API_KEY=
SENDGRID_EMAIL=

# ------------------------------------------------------------
# S3 / R2 (optional)
# ------------------------------------------------------------

S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_PUBLIC_BASE_URL=

# ------------------------------------------------------------
# Twilio SMS (optional)
# ------------------------------------------------------------

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ------------------------------------------------------------
# Payments (optional)
# ------------------------------------------------------------

STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_CLIENT_ID=

PAYPEL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ------------------------------------------------------------
# Password hashing
# ------------------------------------------------------------

PASSWORD_SALT=12
